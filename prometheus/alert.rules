groups:
- name: targets
  rules:
  - alert: monitor_service_down
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Service de surveillance non opérationnel"
      description: "Le service {{ $labels.instance }} est en panne."

- name: host
  rules:
  - alert: high_cpu_load
    expr: node_load1 > 1.5
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Serveur sous forte charge"
      description: "L'hôte Docker est sous forte charge, la charge moyenne sur 1 minute est de {{ $value }}. Signalé par l'instance {{ $labels.instance }} du job {{ $labels.job }}."

  - alert: high_memory_load
    expr: (sum(node_memory_MemTotal_bytes) - sum(node_memory_MemFree_bytes + node_memory_Buffers_bytes + node_memory_Cached_bytes)) / sum(node_memory_MemTotal_bytes) * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Mémoire du serveur presque pleine"
      description: "L'utilisation de la mémoire de l'hôte Docker est de {{ humanize $value }}%. Signalé par l'instance {{ $labels.instance }} du job {{ $labels.job }}."

  - alert: high_storage_load
    expr: (node_filesystem_size_bytes{fstype="aufs"} - node_filesystem_free_bytes{fstype="aufs"}) / node_filesystem_size_bytes{fstype="aufs"} * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Stockage du serveur presque plein"
      description: "L'utilisation du stockage de l'hôte Docker est de {{ humanize $value }}%. Signalé par l'instance {{ $labels.instance }} du job {{ $labels.job }}."

- name: containers
  rules:

  - alert: reverse_nginx_down
    expr: absent(container_memory_usage_bytes{name="reverse nginx"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Reverse Nginx en panne"
      description: "Le conteneur Reverse Nginx est en panne depuis plus de 30 secondes."

  - alert: database_down
    expr: absent(container_memory_usage_bytes{name="deployements_database_1"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Database Deployements en panne"
      description: "Le conteneur database est en panne depuis plus de 30 secondes."

  - alert: backend_down
    expr: absent(container_memory_usage_bytes{name="backend"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Backend en panne"
      description: "Le conteneur backend est en panne depuis plus de 30 secondes."

  - alert: frontend_down
    expr: absent(container_memory_usage_bytes{name="frontend"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Frontend en panne"
      description: "Le conteneur frontend est en panne depuis plus de 30 secondes."
